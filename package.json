{
	"name": "boxflow",
	"version": "1.0.0",
	"description": "The most satisfying progress tracker for Obsidian. Map your workflows into modular, colorful box grids.",
	"author": "junevm",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/junevm/boxflow.git"
	},
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
